<?xml version="1.0"?>
<ruleset name="PSR2">
    <description>Validação do estilo de código com base nas regras da PSR-2</description>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>src/*Views</exclude-pattern>
    <exclude-pattern>tests/uploads</exclude-pattern>
    <exclude-pattern>tests/data</exclude-pattern>
    <exclude-pattern>tests/_reports</exclude-pattern>

    <rule ref="PSR2">
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration" />
        <exclude name="PEAR.Functions.FunctionCallSignature"/>
        <exclude name="Generic.Files.LineLength"/>
    </rule>
</ruleset>
